<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_form_pepsico" model="ir.ui.view">
            <field name="name">pepsico.form</field>
            <field name="model">pepsico</field>
            <field name="arch" type="xml">
                <form string="PepsiCo Sales Record">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="region"/>
                                <field name="sale_date"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="total_order_value"/>
                                <field name="partner_id"/>
                                <field name="sale_order_ref"/>
                            </group>
                        </group>
                        <field name="product_ids" widget="many2many_tags"/>
                        <field name="notes"/>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_tree_pepsico" model="ir.ui.view">
            <field name="name">pepsico.tree</field>
            <field name="model">pepsico</field>
            <field name="arch" type="xml">
                <list string="PepsiCo Sales">
                    <field name="name"/>
                    <field name="region"/>
                    <field name="sale_date"/>
                    <field name="total_order_value"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="view_kanban_pepsico" model="ir.ui.view">
            <field name="name">pepsico.kanban</field>
            <field name="model">pepsico</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="region"/>
                    <field name="total_order_value"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <strong><field name="name"/></strong>
                                <div>Region: <field name="region"/></div>
                                <div>Order Value: â‚¹<field name="total_order_value"/></div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

      
               

        <!-- Action -->
        <record id="action_pepsico" model="ir.actions.act_window">
            <field name="name">PepsiCo Sales</field>
            <field name="res_model">pepsico</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="help" type="html">
                   <p> Create your first PepsiCo Sales record
                </p>
            </field>
        </record>
    </data>
</odoo>
