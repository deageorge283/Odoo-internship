<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <data>
    <record id="view_mall_contract_form" model="ir.ui.view">
        <field name="name">mall.contract.form</field>
        <field name="model">mall.contract</field>
        <field name="arch" type="xml">
            <form string="Mall Contract">
                <group>
                    <field name="name"/>
                    <field name="tenant_id"/>
                    <field name="shop_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                     <field name="rent_amount"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_mall_contract_tree" model="ir.ui.view">
        <field name="name">mall.contract.tree</field>
        <field name="model">mall.contract</field>
        <field name="arch" type="xml">
            <list string="Mall Contract">
                    <field name="name"/>
                    <field name="tenant_id"/>
                    <field name="shop_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                     <field name="rent_amount"/>
            </list>
  
        </field>
    </record>

    <record id="action_mall_contract" model="ir.actions.act_window">
        <field name="name">Mall Contract</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mall.contract</field>
        <field name="view_mode">list,form</field>
    </record>
	</data>

</odoo>